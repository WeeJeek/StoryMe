<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoContentActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:height="42sp"
            android:gravity="center"
            android:background="@color/titletv"/>

        <ImageView
            android:id="@+id/imback"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"></ImageView>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="43sp"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="400px"
            android:layout_height="500px"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/iview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"

                android:background="@mipmap/rabbi"></ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="56sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
